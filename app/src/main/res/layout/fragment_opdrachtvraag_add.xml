<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/opdrachtvraag_add">

        <GridLayout
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:rowCount="15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView

                android:layout_column="0"
                android:layout_row="0"
                android:id="@+id/opdrachtvraag_add_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opdracht Toevoegen" />

            <TextView
                android:layout_column="0"
                android:layout_row="1"
                android:id="@+id/opdrachtvraag_opdrachtnaam"
                android:layout_width="wrap_content"
                android:layout_rowSpan="1"
                android:layout_height="wrap_content"
                android:hint="opdrachtnaam" />

            <EditText
                android:layout_row="2"
                android:id="@+id/opdrachtvraag_add_opdrachtnaam"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:layout_columnSpan="2"
                android:layout_height="wrap_content"
                android:text=''
                />
            <TextView
                android:layout_column="0"
                android:id="@+id/opdrachtvraag_lesvak"
                android:layout_row="3"
                android:layout_width="match_parent"
                android:layout_columnSpan="2"
                android:layout_height="wrap_content"
                android:hint="lesvak" />

            <Spinner
                android:id="@+id/opdrachtvraag_add_lesvak"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_width="200dp"
                android:layout_columnSpan="2"
                android:layout_height="wrap_content"
                />
            <Button
                android:layout_column="0"
                android:id="@+id/opdrachtvraag_add_deadline"
                android:layout_row="5"
                android:layout_width="wrap_content"
                android:layout_rowSpan="1"
                android:layout_height="wrap_content"
                android:text="Deadline"
                />

            <TextView
                android:layout_column="1"
                android:id="@+id/opdrachtvraag_deadline"
                android:layout_row="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />

            <TextView
                android:layout_column="0"
                android:id="@+id/opdrachtvraag_min"
                android:layout_row="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aantal Studenten Minimaal"
                />
            <EditText
                android:layout_column="0"
                android:id="@+id/opdrachtvraag_add_min"
                android:layout_row="7"
                android:layout_width="100dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:text=""
                />

            <TextView
                android:layout_marginStart="50dp"
                android:id="@+id/opdrachtvraag_max"
                android:layout_column="1"
                android:layout_row="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aantal Studenten Maximaal" />

            <EditText
                android:layout_column="1"
                android:inputType="number"
                android:id="@+id/opdrachtvraag_add_max"
                android:layout_marginStart="50dp"
                android:layout_row="7"
                android:layout_width="100dp"
                android:text=""
                android:layout_height="wrap_content" />

            <TextView
                android:layout_column="0"
                android:id="@+id/opdrachtvraag_leerjaar"
                android:layout_row="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leerjaar"
                />

            <Spinner
                android:layout_column="0"
                android:id="@+id/opdrachtvraag_add_leerjaar"
                android:layout_row="9"
                android:layout_width="100dp"
                android:entries="@array/leerjaar_values"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_column="0"
                android:id="@+id/opdrachtvraag_beschrijving"
                android:layout_row="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eisen"
                />
            <EditText
                android:gravity="top|start"
                android:hint="Vul hier de eisen in voor de opdracht"
                android:layout_column="0"
                android:id="@+id/opdrachtvraag_add_eisen"
                android:layout_row="11"
                android:layout_rowSpan="1"
                android:layout_columnSpan="2"
                android:layout_height="200dp"
                android:layout_width="400dp"
                android:text=""
                />

            <EditText
                android:layout_column="0"
                android:layout_row="13"
                android:layout_width="match_parent"
                android:layout_columnSpan="2"
                android:layout_rowSpan="1"
                android:layout_height="wrap_content"
                android:id="@+id/opdrachtvraag_tags"
                android:hint="Tags: informatica, hbo, java, etc"
                android:text=""
                />

            <Button
                android:layout_column="0"
                android:layout_row="14"
                android:layout_width="wrap_content"
                android:layout_rowSpan="1"
                android:layout_height="wrap_content"
                android:id="@+id/opdrachtvraag_toevoegen"
                android:text="Bevestigen"
                />
        </GridLayout>

    </ScrollView>
