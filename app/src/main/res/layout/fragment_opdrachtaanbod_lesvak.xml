<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.fragments.Opdracht.OpdrachtLesvak">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/beschikbare_opdrachten"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/beschikbare_opdrachten_title"
        />


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/opdracht_lesvak_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/beschikbare_opdrachten_title"
        />

</RelativeLayout>