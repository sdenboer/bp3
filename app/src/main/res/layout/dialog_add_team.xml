<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_team_add_title"
        android:text="Maak een nieuw team"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_team_title_naam"
        android:text="team naam"
        android:layout_below="@id/dialog_team_add_title"
        />
    <EditText
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_team_add_naam"
        android:layout_below="@id/dialog_team_add_title"
        android:inputType="text" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bevestigen"
        android:id="@+id/dialog_team_add_button"
        android:layout_below="@id/dialog_team_add_naam"/>

</RelativeLayout>