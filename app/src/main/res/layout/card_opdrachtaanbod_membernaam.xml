<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/opdrachtaanbod_team_delete"
                android:src="@drawable/ic_garbage"
                android:background="#0000"
                android:visibility="gone"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/opdrachtaanbod_team_image"
                android:src="@drawable/ic_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="membername"
                android:id="@+id/opdrachtaanbod_member_naam"
                android:layout_toRightOf="@id/opdrachtaanbod_team_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:textSize="17sp"
                android:layout_toStartOf="@id/opdrachtaanbod_team_delete"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:maxLines="1"
                />

        </RelativeLayout>
</android.support.v7.widget.CardView>