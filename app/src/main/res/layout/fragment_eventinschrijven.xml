<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="291dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inschrijven voor evenement:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <TextView
            android:id="@+id/textViewInschrijveneventNaam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Naam event" />

        <EditText
            android:id="@+id/editTextInschrijvenpersonen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Aantal Personen"/>

        <Button
            android:id="@+id/buttonInschrijven"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:text="Inschrijven"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="326dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>